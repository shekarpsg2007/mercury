<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>mercury</artifactId>
		<groupId>com.humedica.mercury.etl</groupId>
		<version>release-4.201904.0-SNAPSHOT</version>
	</parent>

	<artifactId>mercury-etl-all</artifactId>

	<dependencies>
		<dependency>
			<groupId>com.humedica.mercury.etl</groupId>
			<artifactId>mercury-etl-core</artifactId>
			<version>release-4.201904.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.humedica.mercury.etl</groupId>
			<artifactId>mercury-etl-toolkit</artifactId>
			<version>release-4.201904.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.humedica.mercury.etl</groupId>
			<artifactId>mercury-etl-athena</artifactId>
			<version>release-4.201904.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.humedica.mercury.etl</groupId>
			<artifactId>mercury-etl-asent</artifactId>
			<version>release-4.201904.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.humedica.mercury.etl</groupId>
			<artifactId>mercury-etl-backend</artifactId>
			<version>release-4.201904.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.humedica.mercury.etl</groupId>
			<artifactId>mercury-etl-cernerv2</artifactId>
			<version>release-4.201904.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.humedica.mercury.etl</groupId>
			<artifactId>mercury-etl-crossix</artifactId>
			<version>release-4.201904.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.humedica.mercury.etl</groupId>
			<artifactId>mercury-etl-epicv2</artifactId>
			<version>release-4.201904.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.humedica.mercury.etl</groupId>
			<artifactId>mercury-etl-hl7</artifactId>
			<version>release-4.201904.0-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<executions>
					<!-- ensure that spark and hadoop libs are never included in this project -->
					<execution>
						<id>enforce-banned-spark-hadoop</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<bannedDependencies>
									<excludes>
										<exclude>org.apache.spark:spark-core_*:*:*:!provided</exclude>
										<exclude>org.apache.hadoop:*:*:*:!provided</exclude>
									</excludes>
									<message>
										All spark libraries and hadoop libraries are to be provided by the hortonworks cluster.
										Please ensure that all mercury-etl modules have these dependencies within the "provided"
										scope.
									</message>
								</bannedDependencies>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<skipIfEmpty>false</skipIfEmpty>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
					<execution>
						<id>default-package</id>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<excludes>
									<exclude>org.scala-lang:scala-library</exclude>
									<exclude>org.slf4j:slf4j-api</exclude>
									<exclude>org.apache.spark:spark-sketch_2.11</exclude>
									<exclude>org.apache.spark:spark-tags_2.11</exclude>
								</excludes>
							</artifactSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
